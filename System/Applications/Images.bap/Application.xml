<?xml version="1.0" encoding="UTF-8" ?>
<bambus>
	<name>images</name>
	<description>manage_and_upload_images</description>
	<icon>app-system-image-manager</icon>
	<version>0.14.20070820</version>
	<priority>1.9</priority>
	<purpose>edit_content</purpose>	<tabs>
		<tab icon="place-folder">manage</tab>
		<no_tab icon="action-upload">upload</no_tab>
	</tabs>
	<application>
		<controller>controller.php</controller>
		<interface name="manage" src="manage.php" search="filter">
			<task type="button" hotkey="X" caption="delete_selected" icon="action-list-remove" action="EditorSave();" confirm="do_you_really_want_to_delete_the_selected_files" />
			<task type="spacer" />
			<task type="button" hotkey="a" caption="select_all" icon="action-edit-select-all" action="selectItems(true);" />
			<task type="button" hotkey="e" caption="select_none" icon="action-edit-select-none" action="selectItems(false);" />
			<task type="spacer" />
			<task type="button" hotkey="i" caption="icon_view" icon="action-view-large" action="viewMode('thumbnail');" />
			<task type="button" hotkey="l" caption="list_view" icon="action-view-list" action="viewMode('listView');" />
			<task type="button" hotkey="d" caption="detail_view" icon="action-view-details" action="viewMode('detailView');" />
			<task type="spacer" />
			<task type="button" hotkey="g" caption="groups" icon="action-view-grouped" action="toggleGroup();" />
			<task type="spacer" />
			<task type="button" hotkey="D" caption="download_selected" icon="action-transfer-download" action="downloadSelected('image');" />
			<task type="button" hotkey="U" caption="upload" icon="action-transfer-upload" action="Upload();" />
		</interface>
		<no_interface name="upload" src="upload.php">
			<task type="button" hotkey="s" caption="save" icon="action-upload" action="EditorSave();hideElem('uploadform');showElem('uploadstatus')" />
		</no_interface>
	</application>
</bambus>