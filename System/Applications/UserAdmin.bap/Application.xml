<?xml version="1.0" encoding="UTF-8" ?>
<bambus>
	<name>user</name>
	<description>user_administration</description>
	<icon>app-preferences-account-user</icon>
	<version>0.10.20061011</version>
	<priority>1.9</priority>
	<purpose>system</purpose>
	<tabs>
		<tab icon="action-edit">edit</tab>
	</tabs>
	<application>
		<controller>controller.php</controller>
		
		<interface name="edit" src="edit_user_data.php">
			<task type="button" hotkey="o" caption="open" icon="action-document-open" action="OBJ_ofd.toggle()" />
			<task type="button" hotkey="s" caption="save" icon="action-document-save" action="EditorSave()" />
			<task type="spacer" />
			<task type="button" hotkey="N" caption="new" icon="action-document-new-user" action="toggleAddBox()" />
			<task type="button" hotkey="X" caption="delete" icon="action-delete" action="delete" mode="html" confirm="do_you_really_want_to_delete_this_user" />
		</interface>	
			
		<interface name="groups" src="group_settings.php">
			<task type="button" hotkey="o" caption="open" icon="action-document-open" action="OBJ_ofd.toggle()" />
			<task type="button" hotkey="s" caption="save" icon="action-document-save" action="EditorSave()" />
			<task type="spacer" />
			<task type="button" hotkey="N" caption="new" icon="action-add" action="toggleAddBox()" />
			<task type="button" hotkey="X" caption="delete" icon="action-delete" action="delete" mode="html" confirm="do_you_really_want_to_delete_this_user" />
		</interface>	
			
		<interface name="permissions" src="editor_perms.php">
			<task type="button" hotkey="o" caption="open" icon="action-document-open" action="OBJ_ofd.toggle()" />
			<task type="button" hotkey="s" caption="save" icon="action-document-save" action="EditorSave()" />
			<task type="spacer" />
			<task type="button" hotkey="N" caption="new" icon="action-add" action="toggleAddBox()" />
			<task type="button" hotkey="X" caption="delete" icon="action-delete" action="delete" mode="html" confirm="do_you_really_want_to_delete_this_user" />
		</interface>
	</application>
</bambus>